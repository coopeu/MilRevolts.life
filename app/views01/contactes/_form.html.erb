
<div class='ui form'>  
<%= simple_form_for(@contacte) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



        <div class="field">
          <%= f.label :nom %>
          <div class="ui left icon input">
          <%= f.text_field :nom, autofocus: true ,placeholder:"Nom i cognom"%>
          <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :email %>
          <div class="ui left icon input">
          <%= f.text_field :email, autofocus: true ,placeholder:"El teu correu electrònic, com nom@cognom.cat"%>
          <i class="envelope icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :telèfon %>
          <div class="ui left icon input">
          <%= f.text_field :telefon, autofocus: true ,placeholder:"El teu número de mòbil"%>
          <i class="phone icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :missatge %>
          <%= f.text_area :missatge, autofocus: true ,placeholder:"El teu missatge"%>
        </div>

        <div class="ui basic segment center aligned">
          <%= f.submit "ENVIA" ,class: "ui submit button teal"%>
        </div>

<% end %>
</div>

