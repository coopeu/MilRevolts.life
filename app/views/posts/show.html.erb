<div class="ui grid container">
<div class="row" id="article">
    <div class="ui two wide column"></div>      
    <div><BR/><BR/></div>
      <div class="ui twelve wide column segment">
      <h2 class="ui medium teal header">
        <%= @post.title %>
      </h2>
      <h2 class="ui sub header">
        Reportatge
      </h2>
      <span><%= @post.created_at.strftime("%d-%m-%Y") %> per <%= @post.name %></span>
      <div class="ui hidden divider"></div>
      <p>
			<%= image_tag(@post.foto, style:'width:400px;float:left;margin-right:20px;')  %>
			
      <% if user_signed_in? %>
      <%= sanitize @post.content %>
      <% else %>
      <p><%= sanitize @post.content.truncate(250) %> .../... </p>
      <% end %>
      </p>
      <div class="ui divider"></div>

        
<p id="notice"><%= notice %></p>

<% if current_user && current_user.id == 1 %>
<div class="">
<%= link_to 'Edita', edit_post_path(@post), {class: 'ui left floated mini button'} %>	
</div>
<% end %>

<div class="estra">
<%= link_to 'Enrere', posts_path, {class: 'ui left floated mini teal button'} %>
<div class='ui right aligned'>
<%= link_to 'Llegeix i veure més...', @post.page, class: 'ui right floated mini teal5 button' %>
</div>	
</div>
<div><BR/><BR/><BR/></div>

<% if user_signed_in? && current_user.id == 1 %>     
<div class='row'>
<div class="ui comments">
  <h3 class="ui dividing teal header">Comentaris</h3>
    <% if  @post.comments.count > 0 %>
    <h2 class='ui small sub header'>Número de comentaris: <%= @post.comments.count %></h2>
    <%= render @post.comments %>
    <div><BR/><BR/></div>
    <% end %>
    <div class="field">  
      <%= render 'comments/form' %>
    </div>
  <%#= link_to "Add Comment", new_comment_path(post_id: @post.id) %>
  </div><!-- ./comments -->
</div><!-- ./row -->
<% end %>
    

      </div><!-- ./twelvw column -->
      <div><BR/><BR/></div>
    <div class="ui two wide column"></div> 
  </div><!-- ./article -->
</div><!-- ./grid -->