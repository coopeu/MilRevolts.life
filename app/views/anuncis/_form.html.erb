
<%= simple_form_for(@anunci) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= hidden_field_tag 'name', @anunci.name %>
    <%= @anunci.name %>
    <%#= f.hidden_field :name, :input_html => { :value => current_user.nom } %>
    <%= f.input :title %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
