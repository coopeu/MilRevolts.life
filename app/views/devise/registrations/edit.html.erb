<div class="ui grid">
  <div class="ui row">
    <div class="ui two wide column"></div>      
    <div><BR/><BR/></div>
      <div class="ui twelve wide column segment">

     <div class='ui center aligned column'><%= image_tag("milrevoltslife_250h.png", :alt => "Mil Revolts", :class => "ui centered bordered image") %></div>
     <div><BR/></div>
<h2 class='ui center aligned dividing header teal'>
<i class="user icon teal"></i>Edita el teu compte</h2>

<div class='ui form'>   

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
 <h4 class='ui header red'><i><%= f.error_notification %></i></h4>

  <div class="form-inputs">
   
        <div class="field">
          <%= f.label :nom %>
          <div class="ui left icon input">
          <%= f.text_field :nom%>
          <i class="user icon"></i>
          </div>
        </div>
         <div class="field">
<!-- app/views/posts/show.html.erb -->
<% if @user.avatar.attached? %>
<!-- @post.image.present? will always return true, use attached? to check presence -->
  <p><%= f.label :avatar %>
  <%= image_tag @user.avatar, style:'width:50px;' %>
  </p>
  <%#= link_to 'Elimina', delete_avatar_user_path(@user.avatar), method: :delete, data: { confirm: 'Estas ben segur de eliminar-lo?' }%>
<% end %>
          <div class="ui left icon input">
          <%= f.file_field :avatar, autofocus: true, placeholder:"El teu Avatar"%>
          <i class="user circle icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :moto %>
          <div class="ui left icon input">
          <%= f.text_field :moto %>
          <i class="motorcycle icon"></i>
          </div>
        </div>
        <div class="field">
<!-- app/views/posts/show.html.erb -->
<% if @user.foto_moto.attached? %>
<!-- @post.image.present? will always return true, use attached? to check presence -->
  <p><%= f.label :foto_de_la_teva_moto %>    
  <br>
  <%= image_tag @user.foto_moto, style:'width:150px;' %>
  </p>
<% end %>
          <div class="ui left icon input">
          <%= f.file_field :foto_moto, autofocus: true, placeholder:"La foto de la teva moto"%>
          <i class="motorcycle icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :localitat %>
          <div class="ui left icon input">
          <%= f.text_field :localitat %>
          <i class="map marker alternate icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :data_de_naixement %>
          <div class="ui left icon input">
          <%= f.date_select :data_naixement, autofocus: true, placeholder:"Any del teu naixement", start_year: DateTime.now.year - 18, end_year: DateTime.now.year - 75 %>
          </div>
        </div>
          <div class="field">
          <%= f.label :curta_presentació_com_motorista %>
          <div class="ui left icon input">
          <%= f.text_area :presentacio, autofocus: true, placeholder:"La teva curta presenatció com motorista" %>
          </div>
        </div>
        <BR/><BR/>
         <div class='ui divider teal'></div>
         <div style='margin-top:20px;'><BR/><BR/></div>
        <div class="field" style="margin-top:20px;">
          <%= f.label :mòbil, style: "margin-top:20px;" %>
          <div class="ui left icon input">
          <%= f.text_field :mobil, autofocus: true, placeholder:"El número del teu mòbil per unir-te al grup de WhatsApp" %>
           <i class="phone square icon"></i>
          </div>
        </div>
        <BR/>
        <div class="field">
          <%= f.label :email %>
          <div class="ui left icon input">
          <%= f.email_field :email, autofocus: true %>
          <i class="at icon"></i>
          </div>
        </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
          <%= f.email_field :password %>
          <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %>
          <div class="ui left icon input">
          <%= f.email_field :password_confirmation %>
          <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :current_password %>
          <div class="ui left icon input">
          <%= f.email_field :password_confirmation %>
          <i class="lock icon"></i>
          </div>
        </div>

  </div>
<div><BR/><BR/></div>
  <div class="ui basic segment center aligned">
    <%= f.button :submit, "Canvia", class: "ui submit button teal" %>
  </div>
<% end %>

</div>


<h6 class='ui teal center aligned header'><i>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></i></h6>

        </div><!-- ./segment -->
        <BR/><BR/><BR/>  
      </div><!-- ./twelve -->
    <div class="ui two wide column"></div>
  </div><!-- ./grid -->
</div><!-- ./row -->
